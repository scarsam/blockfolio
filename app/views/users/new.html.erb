<h1>Sign up form</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign up" %>
<% end %>
<p>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
</p>
<p>
  <%= link_to "Login", login_path unless logged_in? %>
</p>