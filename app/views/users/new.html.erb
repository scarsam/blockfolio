<div class="row align-items-center">
  <div class="col">
    <%= form_for @user do |f| %>
      <div class="form-row align-items-center justify-content-center">
        <div class="col-sm-3">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
          <span class='error inline-block'><%= show_errors(@user, :email) %></span>
        </div>
        <div class="col-sm-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
          <span class='error inline-block'><%= show_errors(@user, :password) %></span>
        </div>
        <span>
        <%= f.submit 'Sign up', class: 'btn btn-primary margin-top-7px' %>
        <span>or</span>
        <%= link_to('/auth/facebook', class: 'btn btn-inline margin-top-7px btn-social btn-facebook') do %>
          <span class="fa fa-facebook"></span>
          Continue with Facebook
        <% end %>
        </span>
      </div>
    <% end %>
  </div>
</div>
