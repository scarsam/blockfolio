<h1>Sign up form</h1>
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <p class='error'><%= show_errors(@user, :email) %></p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <p class='error'><%= show_errors(@user, :password) %></p>

  <%= f.submit "Sign up" %>
<% end %>
<p>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
</p>
<p>
  <%= link_to "Login", login_path unless logged_in? %>
</p>