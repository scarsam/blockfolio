<!DOCTYPE html>
<html>
  <head>
    <title>Blockfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <%= link_to 'Create Portfolio', new_portfolio_path if logged_in? %>
    <%= link_to "All Portfolios", portfolios_path if logged_in? %>
    <%= link_to "Top Portfolios", portfolio_value_path  if logged_in? %>
    <%= link_to "Logout", logout_path, method: :delete if logged_in? %>
  </nav>
  <body>
    <%= yield %>
  </body>
</html>
