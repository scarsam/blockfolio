<div class="row">
  <div class="col-sm-4 offset-sm-4">
    <h1>Login</h1>
    <%= form_for @user, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
        <span class='error inline-block'><%= flash[:user_error] %></span>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <span class='error inline-block'><%= flash[:password_error] %></span>
      </div>
      <%= f.submit 'Login', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>
</div>
