<%= form_for [@portfolio, @coin] do |f| %>
  <strong>Coin:</strong>
  <%= f.label :name %>
  <%= f.collection_select :id, Coin.edit_list(@portfolio, @coin), :id, :name %>
  <%= f.fields_for :coin_portfolios, @coin_portfolio do |coin_portfolio| %>
    <%= coin_portfolio.label :quantity %>
    <%= coin_portfolio.number_field :quantity %>
  <% end %>
  <%= f.submit 'Continue' %>
<% end %>