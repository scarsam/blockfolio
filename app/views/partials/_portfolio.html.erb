<ul>
  <li>Portfolio name: <%= portfolio.name %></li>
  <li>Portfolio owner: <%= link_to "#{display_owner(portfolio, current_user)}", user_portfolios_path(portfolio.user) %></li>
  <li>Amount of coins: <%= coins_count(portfolio) %></li>
  <strong>Total Value: <%= number_to_currency(display_total_value(portfolio), precision: 0) %></strong>
  <p><%= link_to 'See Portfolio', portfolio_path(portfolio) %></p>
  <% if can? :destroy, portfolio %>
    <p><%= link_to "Delete Portfolio", portfolio_path(portfolio), method: :delete %></p>
  <% end %>
  <hr>
</ul>