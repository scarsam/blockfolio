<ul>
  <li>Name: <%= coin.name %></li>
  <li>Symbol: <%= coin.symbol %></li>
  <li>Price usd: <%= number_to_currency(coin.price_usd) %></li>
  <li>Market cap usd: <%= number_to_currency(coin.market_cap_usd, precision: 0) %></li>
  <li>Percent change 24h: <%= number_to_percentage(coin.percent_change_24h, precision: 2) %></li>
  <li>Quantity: <%= quantity(coin, @portfolio) %></li>
  <li>Value: <%= number_to_currency(display_value(coin, @portfolio), precision: 0) %></li>
  <% if can? :update, find_coin_portfolio(coin, @portfolio) %>
    <li><%= link_to 'Edit coin', edit_coin_portfolio_path(find_coin_portfolio(coin, @portfolio)) %></li>
  <% end %>
  <% if can? :destroy, find_coin_portfolio(coin, @portfolio) %>
    <li><%= link_to "Delete coin", coin_portfolio_path(find_coin_portfolio(coin, @portfolio)), method: :delete %></li>
  <% end %>
  <hr>
</ul>