<%= form_for @portfolio do |f| %>
  <strong>Portfolio:</strong>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <strong>Coin:</strong>
  <%= f.fields_for :coin_portfolios do |coin_portfolios_fields| %>
    <%= coin_portfolios_fields.label :quantity %>
    <%= coin_portfolios_fields.number_field :quantity %>
    <%= coin_portfolios_fields.collection_select(:id, Coin.all, :name, :name) %>
  <% end %>
  <%= f.submit 'Create Portfolio' %>
<% end %>