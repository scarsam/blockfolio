<% if current_user == @user %>
  <h1>Your portfolios</h1>
<% else %>
  <h1><%= @user.email %>'s portfolios</h1>
<% end %>
<table class="table">
  <thead>
  <tr>
    <th class="border-top-0">Portfolio name</th>
    <th class="border-top-0">Portfolio owner</th>
    <th class="border-top-0">Amount of coins</th>
    <th class="border-top-0">Total value</th>
  </tr>
  </thead>
  <tbody>
    <%= render :partial => "partials/portfolio", :collection => @portfolios %>
  </tbody>
</table>